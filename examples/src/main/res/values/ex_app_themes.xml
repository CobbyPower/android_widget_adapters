    <style name="Ex.App.Theme" parent="Ex.App.Theme.ActionBar">
        <!-- Application background -->
        <item name="android:windowBackground">@drawable/ex_app_bgr_pattern_small</item>
        <!-- Drop shadow for ActionBar -->
        <item name="android:windowContentOverlay">@drawable/ex_shadow_drop</item>
        <!-- Dialog theme -->
        <!-- Background of bottom "action bar" panel (action bar pop up menu at old devices) -->
        <!--<item name="android:panelBackground">@drawable/app_bgr_actionbar_bottom_panel</item>-->
        <!-- # Text appearances -->
        <!-- # Widget styles -->
        <item name="android:textViewStyle">@style/Ex.App.Widget.TextView</item>
        <item name="android:editTextStyle">@style/Ex.App.Widget.EditText</item>
        <item name="android:buttonStyle">@style/Ex.App.Widget.Button</item>
        <item name="android:buttonStyleToggle">@style/Ex.App.Widget.Button.Toggle</item>
        <item name="android:imageButtonStyle">@style/Ex.App.Widget.ImageButton</item>
        <item name="android:radioButtonStyle">@style/Ex.App.Widget.RadioButton</item>
        <item name="android:checkboxStyle">@style/Ex.App.Widget.CheckBox</item>
        <item name="android:progressBarStyle">@style/Ex.App.Widget.ProgressBar</item>
        <item name="android:progressBarStyleSmall">@style/Ex.App.Widget.ProgressBar.Small</item>
        <item name="android:progressBarStyleHorizontal">@style/Ex.App.Widget.ProgressBar.Horizontal</item>
        <item name="android:scrollViewStyle">@style/Ex.App.Widget.ScrollView</item>
        <item name="android:webViewStyle">@style/Ex.App.Widget.WebView</item>
        <item name="android:listViewStyle">@style/Ex.App.Widget.ListView</item>
        <item name="android:gridViewStyle">@style/Ex.App.Widget.GridView</item>
    </style>

    <!-- Splash activity theme -->
