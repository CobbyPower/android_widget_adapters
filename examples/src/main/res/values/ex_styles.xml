<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ###### EXAMPLES STYLES ###### -->
    <eat-comment/>

    <!-- ## Navigation styles ## -->
    <eat-comment/>
    <style name="Ex.Navigation" parent="Ex.App.Widget.ListView">
        <item name="android:background">@color/Ex.Navigation.Background</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:tabWidgetStyle">@style/Ex.Navigation.Copyright</item>
    </style>

    <!-- Navigation footer copyright style-->
    <style name="Ex.Navigation.Copyright" parent="">
        <item name="android:layout_height">@dimen/Ex.Navigation.Copyright.Height</item>
        <item name="android:background">@drawable/ex_bgr_navigation_copy</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:text">@string/Ex.App.copy</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/Ex.App.Primary.White</item>
        <item name="android:drawablePadding">5dip</item>
        <item name="android:icon">@drawable/ex_app_logo_copyright</item>
        <item name="android:divider">@drawable/ex_divider_navigation_copyright</item>
    </style>

    <style name="Ex.Navigation.Widget.TextView.Header" parent="Ex.App.Widget.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/Ex.Navigation.Header</item>
        <item name="android:background">@drawable/ex_bgr_navigation_header</item>
        <item name="android:padding">5dip</item>
    </style>

    <style name="Ex.Navigation.Widget.TextView.Label" parent="Ex.App.Widget.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/Ex.Navigation.Label</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:background">@drawable/ex_selector_navigation</item>
    </style>

</resources>