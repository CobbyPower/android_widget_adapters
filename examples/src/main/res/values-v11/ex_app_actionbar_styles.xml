<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ###### EXAMPLES APPLICATION ACTIONBAR STYLES (v11) ###### -->
    <eat-comment/>

    <!-- Actionbar parent theme specific for API version 11 and higher -->
    <style name="Ex.App.Theme.ActionBar.v11" parent="Theme.AppCompat">
        <!-- Action button's background -->
        <!--<item name="actionBarItemBackground">@drawable/app_actionbar_btn_action_bgr</item>--><!-- TODO -->
        <!-- Action buttons divider -->
        <!--<item name="actionBarDivider">@drawable/app_actionbar_divider</item>--><!-- TODO -->
    </style>

    <!-- Actionbar parent theme -->
    <style name="Ex.App.Theme.ActionBar" parent="Ex.App.Theme.ActionBar.v11">
        <!-- Home as up icon (back button icon) -->
        <!--<item name="android:homeAsUpIndicator">@drawable/ic_action_back</item>--> <!-- TODO -->
        <!-- More overflow menu button style -->
        <item name="android:actionOverflowButtonStyle">@style/Ex.App.ActionBar.Widget.ActionButton.Overflow</item>
        <!-- Widget style -->
        <item name="android:actionBarStyle">@style/Ex.App.Actionbar.Widget</item>
        <!-- Action button's text color -->
        <item name="android:actionMenuTextColor">@color/Ex.App.Actionbar.Label.Text</item>
        <!-- Popup menu style (like actionbar overflow menu) -->
        <item name="android:popupMenuStyle">@style/Ex.App.Actionbar.Widget.PopupMenu</item>
        <!-- PopUp menu item text appearance (large) -->
        <item name="android:textAppearanceLargePopupMenu">@style/Ex.App.Actionbar.TextAppearance.PopupMenu.Large</item>
        <!-- PopUp menu item text appearance (small) -->
        <item name="android:textAppearanceSmallPopupMenu">@style/Ex.App.Actionbar.TextAppearance.PopupMenu.Small</item>
    </style>

    <!-- Actionbar widget parent style specific for API version 11 and higher -->
    <style name="Ex.App.ActionBar.Widget.v11" parent="android:Widget.ActionBar">
    </style>

    <!-- Actionbar widget style -->
    <style name="Ex.App.Actionbar.Widget" parent="Ex.App.ActionBar.Widget.v11">
        <!-- Background for the top action bar view -->
        <item name="android:background">@drawable/ex_app_actionbar_bgr</item>
        <!-- Style for actionbar label text -->
        <item name="android:titleTextStyle">@style/Ex.App.Actionbar.TextAppearance.Label</item>
    </style>
</resources>